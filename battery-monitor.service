[Unit]
Description=Battery Monitor and Notifier Service
After=graphical-session.target
PartOf=graphical-session.target

[Service]
Type=simple

ExecStart=%h/.local/share/battery-monitor/venv/bin/python %h/.local/share/battery-monitor/battery-monitor.py
WorkingDirectory=%h/.local/share/battery-monitor/
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=graphical-session.target
